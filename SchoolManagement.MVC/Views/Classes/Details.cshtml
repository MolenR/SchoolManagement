@model SchoolManagement.MVC.Data.Classes

@{
    ViewData["Title"] = "Details";
}

<h1>Class Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Model.Course.Code - @Model.Course.Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lecture)
        </dt>
        <dd class = "col-sm-10">
            @Model.Lecture.FirstName @Model.Lecture.LastName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit Details</a>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>
